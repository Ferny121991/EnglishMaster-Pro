rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper to check if user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'vidacristiana21@gmail.com';
    }

    // Students / Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Pre-registered students
    match /pre_registered/{studentId} {
      allow read, write: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Other collections (for now keep open but authenticated)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}